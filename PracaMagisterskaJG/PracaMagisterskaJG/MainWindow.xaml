<Window x:Class="PracaMagisterskaJG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracaMagisterskaJG"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Plik">
                <MenuItem x:Name="menuItemOpenFile" Header="_Otwórz plik..." Click="menuItemOpenFile_Click"  />
                <Separator />
                <MenuItem x:Name="menuItemExit" Header="_Zakończ" Click="menuItemExit_Click"  />
            </MenuItem>
            <MenuItem Header="_Metody">
                <MenuItem x:Name="menuItemTVT" Header="_Train Validate Test" Click="menuItemTVT_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="tbFileName" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <TextBox x:Name="tbTest" HorizontalAlignment="Left" Height="379" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="792"/>
        </Grid>
    </DockPanel>

</Window>
